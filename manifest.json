{
  "manifest_version": 3,
  "name": "FunPay auto fill card",
  "version": "1.0.0",
  "description": "Расширение которое будет заполнять форму карточки товара на FunPay",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "index.html",
    "default_title": "FunPay auto fill card"
  },
  "content_scripts": [
    {
      "matches": ["https://*.funpay.com/lots/offerEdit*"],
      "run_at": "document_idle",
      "js": ["src/content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
